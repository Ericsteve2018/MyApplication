<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><![CDATA[
    android:background="@android:color/holo_blue_light">

    ]]>

    <Button
        android:id="@+id/registred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="80dp"
        android:text="registred" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:gravity="center"
        android:drawableStart="@drawable/date"
        android:drawableLeft="@drawable/date"
        android:hint="departuredate"
        android:inputType="date" />

    <EditText

        android:id="@+id/DepartureTown"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:drawableStart="@drawable/city"
        android:drawableLeft="@drawable/city"
        android:hint="departuretown"
        android:inputType="text" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:gravity="center"
        android:drawableLeft="@drawable/date"
        android:drawableStart="@drawable/date"
        android:hint="arrivaldate"
        android:inputType="date" />

    <EditText

        android:id="@+id/ArrivalTown"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:drawableLeft="@drawable/city"
        android:drawableStart="@drawable/city"
        android:hint="arrivaltown"
        android:inputType="text" />

</RelativeLayout>